.container .toast_content_box {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  z-index: 9999; }

.container .toast_content {
  width: 50%;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx; }

.container .toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center; }

.star {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 12rpx;
  vertical-align: middle; }

.star image {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 12rpx; }

page {
  background-color: #f7f7f7;
  font-family: PingFang-SC-Regular;
  color: #333; }

.container {
  height: 100%;
  font-size: 28rpx;
  box-sizing: border-box; }
