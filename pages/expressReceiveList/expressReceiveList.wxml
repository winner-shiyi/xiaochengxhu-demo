
<import src="pickUp/pickUp.wxml" />
<import src="dispatch/dispatch.wxml" />
<import src="finish/finish.wxml" />


<view class="expressReceiveList-container">
  <view class="navigation-box">
    <block wx:for="{{categoryTypeArr}}" wx:key="{{index}}">
      <view class="navigation-item {{currentMenuIndex === index ? 'navigation-select' : ''}}" bindtap="changeOrderList" data-index="{{index}}">
        <view class="item-title">{{item.name}}</view>
      </view>
    </block>
  </view>

  <view class="expressReceiveList-tpl">
    <!-- 待自提 -->
    <view class="tpl-box" hidden="{{currentMenuIndex !== 0}}">     
      <template is="pickUpTpl" data="{{orderArr:orderData.list}}" />
    </view>
    <!-- 配送中 -->
    <view class="tpl-box" hidden="{{currentMenuIndex !== 1}}">
      <template is="dispatchTpl" data="{{statusData:statusData,orderArr:orderData.list}}" />
    </view>
    <!-- 已完成 -->
    <view class="tpl-box" hidden="{{currentMenuIndex !== 2}}">
      <template is="finishTpl" data="{{orderArr:orderData.list}}" />
    </view>
  </view>
  <view class="loading" hidden="{{!movieLoading}}">正在加载更多...</view>
  <view class="loading complete" hidden="{{!moiveLoadingComplete}}">已加载全部</view>

  <loading hidden="{{loadingHidden}}">
    加载中...
  </loading>
</view>