.container .toast_content_box {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.container .toast_content {
    width: 50%;
    padding: 30rpx;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 20rpx;
}

.container .toast_content_text {
    height: 100%;      
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}