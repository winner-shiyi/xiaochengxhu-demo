<view class="container">
  <view class="navigation-box">
    <block wx:for="{{categoryTypeArr}}" wx:key="{{index}}">
      <view class="navigation-item {{currentMenuIndex === index ? 'navigation-select' : ''}}" bindtap="changeOrderList" data-index="{{index}}">
        <view class="item-title">{{item.name}}</view>
      </view>
    </block>
  </view>
  <view class="send-body">
    <!-- 去门店寄件 -->
    <view class="tpl-box" wx:if="{{currentMenuIndex === 0}}">  
      <import src="storeSend/storeSend.wxml" />   
      <template is="storeSendTpl" data="{{...judgeObject, orderArr:orderList}}" />
    </view>
    <!-- 快递员上门 -->
    <view class="tpl-box" wx:if="{{currentMenuIndex === 1}}">  
      <import src="doorSend/doorSend.wxml" />   
      <template is="doorSendTpl" data="{{...judgeObject, orderArr:orderList}}" />
    </view>
  </view>
</view>
